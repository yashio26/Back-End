<h1 style="color:crimson;">Lista de productos</h1>
    {{#if listExists}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Titulo</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#each list}}
            <tr>
                <td>{{this.titulo}}</td>
                <td>{{this.precio}}</td>
                <td><img src="{{this.foto}}" style="width: 4vw; height: 7vh;"></img></td>
            </tr>
            {{/each}}
        </table>
        <a href="/"><button class="btn btn-success mt-3 mb-5">Agregar productos</button></a>
    </div>
    {{else}}
    <h2 class="alert alert-danger">No se encontraron productos.</h2>
    <a href="/"><button class="btn btn-success mt-3 mb-5">Agregar productos</button></a>
    {{/if}}