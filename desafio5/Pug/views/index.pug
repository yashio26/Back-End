html
    head
        title='Ingreso de datos'
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css", 
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l", crossorigin="anonymous")
    body.container.mt-3
        div.jumbotron
            h1='Ingrese datos'
            br
            form(action="/productos" method="post")
                div.form-group
                    label(for="titulo")='Titulo'
                    input.form-control(id="titulo" type="text" name="titulo")
                div.form-group
                    label(for="precio")='Precio' 
                    input.form-control(id="precio" type="number" name="precio")
                div.form-group
                    label(for="foto")='Foto'
                    input.form-control(id="foto" type="text" name="foto")
                button.btn.btn-success.mt-3.mb-5="Enviar"
            a(href="/productos")
                button.btn.btn-success.mt-3.mb-5='Ver la lista de productos'